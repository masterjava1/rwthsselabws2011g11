#==============================================================================
# 31.03.2012
# 
# Makefile for odeint
# blitz 0.9 required!
#
#==============================================================================

CF = -O2 -lntl
DCF = -lntl -Wall -g

FILES = StepperBase.cpp RuntimeException.cpp main.cpp

#==============================================================================

default: $(FILES)
	g++ $(FILES) $(CF) -o odeint.exe

debug: $(FILES)
	g++ $(FILES) $(DCF) -o odeint_debug.exe

#==============================================================================
